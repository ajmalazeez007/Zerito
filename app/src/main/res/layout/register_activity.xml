<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#5e182c"
    android:layout_height="match_parent"
     >
<ScrollView
    android:layout_width="fill_parent"
    android:fillViewport="true"

    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/heart"
       android:id="@+id/logo"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="80dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zerito"
        android:id="@+id/zeri"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:layout_marginTop="-20dp"/>



     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/zeri"
         android:id="@+id/phonecountry"
         android:layout_centerHorizontal="true"
          android:gravity="center"

         android:layout_marginTop="50dp"
         >


         <Spinner

             android:layout_width="90dp"

             android:layout_height="40dp"
             android:id="@+id/countrycodespinner"
             android:layout_marginRight="10dp"
             android:paddingLeft="7dp"
             android:popupBackground="#5e182c"
                android:spinnerMode="dialog"

             android:background="@drawable/rounded_edittextmaroon"

             />

        <EditText
        android:id="@+id/phone"
        android:layout_width="200dp"
        android:inputType="phone"
        android:layout_height="40dp"

        android:background="@drawable/rounded_edittextwhite"


        android:textColor="#000000"
        android:hint="Phone number"
        android:paddingLeft="5dp"
        android:textColorHint="#c9c9c9"
        />

     </LinearLayout>



<ImageView
    android:id="@+id/submit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:src="@drawable/signinsel"
    android:layout_marginTop="17dp"
    android:layout_below="@id/phonecountry"/>




    </RelativeLayout>
</ScrollView>
</RelativeLayout>